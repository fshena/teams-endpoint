{
    "version": "1.2.2",
    "name": "@localleague/teams-endpoint",
    "description": "Teams API endpoint",
    "keywords": [
        "api",
        "endpoints",
        "teams"
    ],
    "author": {
        "name": "Florian Shena",
        "email": "florian.shena@gmail.com"
    },
    "repository": {
        "type": "vcs",
        "url": "git@bitbucket.org:startingeleven/localleague-teams-endpoint.git"
    },
    "engines": {
        "node": ">=4.2.6",
        "npm": ">=3.5.2"
    },
    "config": {
        "envFilePath": "/local_league/.env"
    },
    "main": "index.js",
    "dependencies": {
        "@localleague/database": "^1.2.2",
        "@localleague/helpers": "^1.0.0",
        "@localleague/middleware": "^1.1.0",
        "cross-env": "^5.1.3",
        "dotenv": "^4.0.0",
        "extract": "^1.0.0",
        "http-status-codes": "^1.3.0",
        "object-mapper": "^4.2.0",
        "sequelize": "^4.22.5",
        "sequelize-cli": "^4.0.0",
        "yamljs": "^0.3.0",
        "joi": "^12.0.0",
        "restify-errors": "^5.0.0"
    },
    "devDependencies": {
        "@localleague/server": "^1.0.1",
        "chai": "^4.1.2",
        "chai-http": "^3.0.0",
        "eslint": "^4.10.0",
        "eslint-config-airbnb": "^17.0.0",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-react": "^7.10.0",
        "faker": "^4.1.0",
        "mocha": "^5.0.0",
        "nodemon": "^1.12.1"
    },
    "scripts": {
        "postinstall": "npm run db:migrate",
        "db:migrate": "sequelize db:migrate",
        "db:seed": "sequelize db:seed:all",
        "db:test:migrate": "cross-env NODE_ENV=test sequelize db:migrate",
        "dev": "nodemon ./devServer.js",
        "test": "cross-env NODE_ENV=test mocha --timeout=10000 ./tests/unit --exit",
        "test:integration": "cross-env NODE_ENV=test mocha --timeout=10000 ./tests/integration --exit",
        "lint": "node_modules/.bin/eslint ./",
        "lint:fix": "node_modules/.bin/eslint --fix ./"
    }
}
